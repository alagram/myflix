%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
          - @queue_items.each do |queue_item|
            %tr
              %td
                %input(type="text" value="#{queue_item.id}")
              %td
                = link_to queue_item.video.title, video_path(queue_item.video)
              %td
                = button_to "Play", nil, class: "btn"
              %td
                %select(name="")
                  - queue_item.video.reviews.where(user_id: current_user, video_id: queue_item.video).each do |review|
                    = options_for_select([review.rating].map {|num| [pluralize(num, "Star")]})
              %td
                - queue_item.video.genres.each do |genre|
                  = link_to genre.name, genre_path(genre)
              %td
                = link_to video_queue_item_path(queue_item.video, queue_item), method: 'delete', confirm: "Are you sure?" do
                  %i.icon-remove
        = button_to "Update Instant Queue", nil, class: "btn"
