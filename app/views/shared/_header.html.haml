%section#top-header.row
  %h1.span2
    = link_to "MyFLiX"
  - if current_user  
    %ul.span4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue"
      %li= link_to "People"
    = form_tag search_videos_path, class: 'for-search' do
      = text_field_tag :search_term, nil, class: 'search-query', placeholder: 'Search for videos here'
      = submit_tag 'Search', class: 'btn', name: nil
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", sign_out_path
